<%= render 'shared/errors' ,obj:@my_subjects %>

 <%= form_for(@my_subjects, :html=>{class: "form-horizontal",role: "form"})do |i| %>
 <div class="form-group">
   <div class="control-label col-sm-3">
    <%= i.label :name %>
    </div>
    <div class="col-sm-9">

    <%= i.text_field :name ,class: "form-control",placeholder: "Enter subject name",autofocus: true%>
    </div>
    </div>
<br/>
<div class="center">
   <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= i.submit "Add Subject" ,class: 'btn btn-primary btn-lg' %>
  </div>
  </div>
  </div>
<%end%>
<div class="col-xs-4 col-xs-offset-4">

</div>

