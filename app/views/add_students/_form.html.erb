
<%= render 'shared/errors' ,obj:@add_student %>

 <%= form_for(@add_student, :html=>{class: "form-horizontal",role: "form"})do |i| %>
 <div class="form-group">
   <div class="control-label col-sm-3">
    <%= i.label :name %>
    </div>
    <div class="col-sm-9">

      <%= i.text_field :name ,class: "form-control",placeholder: "Enter student name",autofocus: true%>
    </div>
    <br/>
    <br/>
    <br/>
    <div class="control-label col-sm-3">
        <%= i.label :image %>
    </div>
    <div class="col-sm-8">

      <%= i.file_field :image %>
    </div>

    </div>
    
    
    <div class="control-label col-sm-3">
    <% if @my_subjects.present? %>

       <label>  Subjects</label>
    <% end %>
    </div>
    <div class="form-group">

              <div class="row">
              <div class="col-sm-offset-2 col-sm-8">
                    <%= i.collection_check_boxes :my_subject_ids,MySubject.all,:id, :name do |cb| %>
                    <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") +cb.text} %>
                    <% end %>
                  </div>
                 </div> 
              </div>
             
  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= i.submit "Add Student",class: 'btn btn-primary btn-lg' %>
  </div>
  </div>
<%end%>
<div class="col-xs-4 col-xs-offset-4">

</div>